SPLUNK_CONFIG={{ splunk_otel_collector_config }}
SPLUNK_ACCESS_TOKEN={{ splunk_access_token }}
SPLUNK_REALM={{ splunk_realm }}
SPLUNK_API_URL={{ splunk_api_url | default("https://api." + splunk_realm + ".signalfx.com") }}
SPLUNK_INGEST_URL={{ splunk_ingest_url | default("https://ingest." + splunk_realm + ".signalfx.com") }}
{% if splunk_trace_url is defined and splunk_trace_url %}
SPLUNK_TRACE_URL={{ splunk_trace_url }}
{% elif splunk_ingest_url is defined and splunk_ingest_url %}
SPLUNK_TRACE_URL={{ splunk_ingest_url + "/v2/trace" }}
{% else %}
SPLUNK_TRACE_URL={{ "https://ingest." + splunk_realm + ".signalfx.com/v2/trace" }}
{% endif %}
{% if splunk_hec_url is defined and splunk_hec_url %}
SPLUNK_HEC_URL={{ splunk_hec_url }}
{% elif splunk_ingest_url is defined and splunk_ingest_url %}
SPLUNK_HEC_URL={{ splunk_ingest_url + "/v1/log" }}
{% else %}
SPLUNK_HEC_URL={{ "https://ingest." + splunk_realm + ".signalfx.com/v1/log" }}
{% endif %}
SPLUNK_HEC_TOKEN={{ splunk_hec_token }}
SPLUNK_MEMORY_TOTAL_MIB={{ splunk_memory_total_mib }}
{% if splunk_listen_interface is defined and splunk_listen_interface %}
SPLUNK_LISTEN_INTERFACE={{ splunk_listen_interface }}
{% endif %}
{% if gomemlimit is defined and gomemlimit %}
GOMEMLIMIT={{ gomemlimit }}
{% endif %}
SPLUNK_BUNDLE_DIR={{ splunk_bundle_dir }}
SPLUNK_COLLECTD_DIR={{ splunk_collectd_dir }}
{% if splunk_otel_collector_additional_env_vars is not none %}
{% for key,value in splunk_otel_collector_additional_env_vars.items() if key != "OTELCOL_OPTIONS" %}
{{ key }}={{ value }}
{% endfor %}
{% endif %}
{% set otelcol_options = "" %}
{% if splunk_otel_collector_additional_env_vars is not none and "OTELCOL_OPTIONS" in splunk_otel_collector_additional_env_vars.keys() %}
{% set otelcol_options = splunk_otel_collector_additional_env_vars["OTELCOL_OPTIONS"] %}
{% endif %}
{% if splunk_otel_auto_discovery is defined and splunk_otel_auto_discovery %}
{% set otelcol_options = otelcol_options + " --discovery" %}
{% if splunk_otel_auto_discovery_properties_source or splunk_otel_auto_discovery_properties_yaml %}
{% set otelcol_options = otelcol_options + " --discovery-properties=" + splunk_otel_auto_discovery_properties_dest %}
{% endif %}
{% endif %}
{% if otelcol_options %}
OTELCOL_OPTIONS={{ otelcol_options | trim }}
{% endif %}
